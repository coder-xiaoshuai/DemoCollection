<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <!--普通圆形view-->
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="start_color" format="color"/>
        <attr name="end_color" format="color"/>
        <attr name="line_width" format="dimension"/>
        <attr name="current_percent" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DisplayView">
        <!--收起按钮布局-->
        <attr name="collapse_layout" format="reference" />
        <!--展开按钮布局-->
        <attr name="expand_layout" format="reference" />
        <!--子布局之间的距离-->
        <attr name="btn_spacing" format="dimension" />
        <!--在 loop 模式下点击 view 直接展开，List 模式下响应子 view 点击-->
        <attr name="click_loop_to_expand" format="boolean" />
    </declare-styleable>
</resources>